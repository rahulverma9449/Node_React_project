<!DOCTYPE html>
<html>
<head>
  <title>Edit Student</title>
  <link rel="stylesheet" href="/css/student.css">
</head>
<body>
  <h1 class="styled-heading">Edit Student</h1>
  <form class="student-form" action="/student/update/<%= student._id %>" method="POST">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" value="<%= student.name %>" required>

    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= student.email %>" required>

    <label for="batch">Batch:</label>
    <input type="text" id="batch" name="batch" value="<%= student.batch %>" required>

    <label for="college">College:</label>
    <input type="text" id="college" name="college" value="<%= student.college %>" required>

    <label for="dsaScore">DSA Score:</label>
    <input type="number" id="dsaScore" name="dsaScore" value="<%= student.dsaScore %>" required>

    <label for="webdScore">WebD Score:</label>
    <input type="number" id="webdScore" name="webdScore" value="<%= student.webdScore %>" required>

    <label for="reactScore">React Score:</label>
    <input type="number" id="reactScore" name="reactScore" value="<%= student.reactScore %>" required>
    <label for="placementStatus">Placement Status:</label>
<select id="placementStatus" name="placementStatus" required>
  <option value="Placed" <%= placedOption === 'Placed' ? 'selected' : '' %>>Placed</option>
  <option value="Unplaced" <%= placedOption === 'Unplaced' ? 'selected' : '' %>>Unplaced</option>
</select>
    <button type="submit">Update Student</button>
  </form>
</body>
</html>
